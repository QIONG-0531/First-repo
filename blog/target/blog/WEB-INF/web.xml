<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="false">
<!-- 注册 -->
  <servlet>
    <servlet-name>reg</servlet-name>
    <servlet-class>service.RegServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>reg</servlet-name>
    <url-pattern>/reg</url-pattern>
  </servlet-mapping>
  <!-- 登录 -->
  <servlet>
    <servlet-name>log</servlet-name>
    <servlet-class>service.LogServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>log</servlet-name>
    <url-pattern>/log</url-pattern>
  </servlet-mapping>

  <!-- 文章列表 -->
  <servlet>
    <servlet-name>artlist</servlet-name>
    <servlet-class>service.ArtListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>artlist</servlet-name>
    <url-pattern>/artlist</url-pattern>
  </servlet-mapping>

  <!-- 文章删除 -->
  <servlet>
    <servlet-name>mydel</servlet-name>
    <servlet-class>service.ArtDelServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>mydel</servlet-name>
    <url-pattern>/mydel</url-pattern>
  </servlet-mapping>


  <!-- 文章添加-->
  <servlet>
    <servlet-name>artadd</servlet-name>
    <servlet-class>service.ArtAddServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>artadd</servlet-name>
    <url-pattern>/artadd</url-pattern>
  </servlet-mapping>

  <!-- 文章修改-->
  <servlet>
    <servlet-name>update</servlet-name>
    <servlet-class>service.ArtUpdateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>update</servlet-name>
    <url-pattern>/update</url-pattern>
  </servlet-mapping>
  <!-- 文章查询-->
  <servlet>
    <servlet-name>select</servlet-name>
    <servlet-class>service.ArtSelectServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>select</servlet-name>
    <url-pattern>/select</url-pattern>
  </servlet-mapping>
</web-app>
