<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">
 <!-- 注册页面 -->
  <servlet>
    <servlet-name>reg</servlet-name>
    <servlet-class>service.RegServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>reg</servlet-name>
    <url-pattern>/reg</url-pattern>
  </servlet-mapping>

    <!-- 登录页面 -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>service.LogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- 文章列表页面 -->
    <servlet>
        <servlet-name>artlist</servlet-name>
        <servlet-class>service.ArtListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>artlist</servlet-name>
        <url-pattern>/artlist</url-pattern>
    </servlet-mapping>

    <!-- 文章删除页面 -->
    <servlet>
        <servlet-name>mydel</servlet-name>
        <servlet-class>service.ArtDelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mydel</servlet-name>
        <url-pattern>/mydel</url-pattern>
    </servlet-mapping>

    <!-- 文章添加页面 -->
    <servlet>
        <servlet-name>addart</servlet-name>
        <servlet-class>service.ArtAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addart</servlet-name>
        <url-pattern>/addart</url-pattern>
    </servlet-mapping>

</web-app>
